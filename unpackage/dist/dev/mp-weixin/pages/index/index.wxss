.content {
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f7f7f7;
}
.wrap {
  width: 750rpx;
}
.personal_info {
  margin-top: 20rpx;
  width: 750rpx;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: white;
}
.personal_info_container {
  width: 750rpx;
  display: flex;
  flex-direction: row;
}
.personal_info_container .personal_profile_container {
  margin-left: 25rpx;
  margin-top: 5rpx;
}
.personal_info_container .personal_info_infomation {
  flex-basis: 70%;
  margin-left: 17rpx;
}
.personal_info_container .personal_info_information {
  display: flex;
  flex-direction: column;
}
.personal_info_container .personal_info_top {
  display: flex;
  align-items: baseline;
  padding-bottom: 2rpx;
}
.personal_info_container .personal_info_username {
  font-size: 32rpx;
  margin-right: 10rpx;
  color: #404040;
}
.personal_info_container .personal_info_department {
  font-size: 25rpx;
  color: #4d4d4d;
}
.personal_info_container .personal_info_class {
  color: #9e9e9e;
  font-size: 25rpx;
  margin-top: 2rpx;
}
.personal_info_container .arrow_right_top {
  position: relative;
  left: 20rpx;
  margin: auto;
}
.button_center_container {
  margin-top: 20rpx;
  width: 750rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  gap: 280rpx;
  justify-content: center;
  align-items: center;
  background-color: white;
}
.button_center_container .teacher_center {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.button_center_container .teacher_center .svg {
  height: 50rpx;
  width: 50rpx;
}
.button_center_container .teacher_center_text {
  color: #404040;
  margin-top: 5rpx;
  font-size: 26rpx;
}
.button_center_container .student_center {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.button_center_container .student_center .svg {
  height: 65rpx;
  width: 65rpx;
}
.button_center_container .student_center_text {
  color: #404040;
  margin-top: 5rpx;
  font-size: 26rpx;
}
.college_news {
  color: gray;
  margin-top: 40rpx;
  margin-left: 45rpx;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}
.college_news_container ._li {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  list-style: none;
  width: 750rpx;
  height: 100rpx;
  padding-right: 40rpx;
  color: #404040;
  margin-top: 2rpx;
  background-color: white;
  font-size: 32rpx;
}
.college_news_container ._li ._a {
  margin-left: 45rpx;
  width: 570rpx;
  overflow-x: hidden;
  display: inline;
  white-space: nowrap;
  text-decoration: none;
}
.college_news_container ._li ._a, .college_news_container ._li ._a:link, .college_news_container ._li ._a:visited, .college_news_container ._li ._a:hover, .college_news_container ._li ._a:active {
  text-decoration: none;
  color: inherit;
}
